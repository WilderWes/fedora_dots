for_window [class="^.*"] border pixel 2
client.focused          #7aa2f7 #16161d #c0caf5 #7aa2f7   #7aa2f7
client.focused_inactive #414868 #16161d #c0caf5 #414868   #414868
client.unfocused        #414868 #16161d #c0caf5 #414868   #414868

for_window [window_type="dialog"] move position center

